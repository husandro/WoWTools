<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Button name="WoWToolsKeystoneButtonTemplate" registerForClicks="LeftButtonUp, RightButtonUp" virtual="true">
        <Size x="0" y="74"/>
        <Anchors>
            <Anchor point="LEFT"/>
            <Anchor point="RIGHT"/>
        </Anchors>
        <Scripts>
            <OnLeave function='GameTooltip_Hide'/>
            <OnEnter>
                WoWTools_SetTooltipMixin:Frame(self)
            </OnEnter>
        </Scripts>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentIconTexture" parentKey="Icon">
                    <Size x="36" y="36"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-4" y="-4"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="NameFrame" atlas="QuestItemBorder" useAtlasSize="true" setAllPoints="true"/>
            </Layer>

            <Layer level="ARTWORK">
                <FontString parentKey="Name" inherits="ChatFontNormal" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.Icon" relativePoint="BOTTOMRIGHT"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="Name2" inherits="ChatFontNormal" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.Name"  relativePoint="BOTTOMRIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Button>
</Ui>