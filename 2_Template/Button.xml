<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">

    <Button name="WoWToolsButtonTemplate" virtual="true">
        <Size x="23" y="23"/>
        <PushedTexture atlas="newplayertutorial-drag-cursor"/>
        <HighlightTexture atlas="WoWShare-Highlight"/>        
        <Scripts>
            <OnLoad function="WoWToolsButton_OnLoad"/>
            <OnLeave function="WoWToolsButton_OnLeave"/>
            <OnEnter function="WoWToolsButton_OnEnter"/>
        </Scripts>
    </Button>

    <Button name="WoWToolsButton2Template" virtual="true">
        <Size x="23" y="23"/>
        <HighlightTexture atlas="bag-border">
            <Anchors>
                <Anchor point="TOPLEFT" x="-1" y="2"/>
                <Anchor point="BOTTOMRIGHT" x="2" y="-2"/>
            </Anchors>
        </HighlightTexture>
        <PushedTexture atlas="bag-border-highlight">
            <Anchors>
                <Anchor point="TOPLEFT" x="-1" y="2"/>
                <Anchor point="BOTTOMRIGHT" x="2" y="-2"/>
            </Anchors>
        </PushedTexture>
        <Layers>
            <Layer level="BORDER">
                <Texture parentKey="texture">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="-1" y="1"/>
                        <Anchor point="BOTTOMRIGHT" x="1" y="-1"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="border" atlas='bag-reagent-border'>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="-1" y="2"/>
                        <Anchor point="BOTTOMRIGHT" x="2" y="-2"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <MaskTexture parentKey="IconMask" setAllPoints="true" atlas="CircleMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<MaskedTextures>
						<MaskedTexture childKey="texture"/>
					</MaskedTextures>
				</MaskTexture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad function="WoWToolsButton_OnLoad"/>
            <OnLeave function="WoWToolsButton_OnLeave"/>
            <OnEnter function="WoWToolsButton_OnEnter"/>
        </Scripts>
    </Button>


    <DropdownButton name="WoWToolsMenuTemplate" virtual="true">
        <Size x="23" y="23"/>
        <NormalTexture atlas="ui-questtrackerbutton-filter"/>
        <PushedTexture atlas="ui-questtrackerbutton-filter-pressed"/>
        <HighlightTexture atlas="ui-questtrackerbutton-red-highlight"/>
        <Scripts>
            <OnLoad function="WoWToolsMenu_OnLoad"/>
            <OnLeave function="WoWToolsButton_OnLeave"/>
            <OnEnter function="WoWToolsButton_OnEnter"/>
        </Scripts>
    </DropdownButton>

    <DropdownButton name="WoWToolsMenu2Template" virtual="true">
        <Size x="23" y="23"/>        
        <HighlightTexture atlas="Azerite-Trait-RingGlow">
            <Anchors>
                <Anchor point="TOPLEFT" x="-5" y="5"/>
                <Anchor point="BOTTOMRIGHT" x="5" y="-5"/>
            </Anchors>
        </HighlightTexture>
        <PushedTexture atlas="bag-border-highlight">
            <Anchors>
                <Anchor point="TOPLEFT" x="-2" y="2"/>
                <Anchor point="BOTTOMRIGHT" x="4" y="-4"/>
            </Anchors>
        </PushedTexture>        
        <Scripts>
            <OnLoad function="WoWToolsMenu_OnLoad"/>
            <OnLeave function="WoWToolsButton_OnLeave"/>
            <OnEnter function="WoWToolsButton_OnEnter"/>
        </Scripts>
    </DropdownButton>

    <Button name="WoWToolsEmojiButtonTemplate" virtual="true">
        <Size x="32" y="32"/>
        <NormalTexture atlas="chatframe-button-up">
            <Anchors>
                <Anchor point="TOPLEFT" x='0' y='0'/>
                <Anchor point="BOTTOMRIGHT" x='0' y='0'/>
            </Anchors>
        </NormalTexture>
        <PushedTexture atlas="chatframe-button-down"/>
        <HighlightTexture atlas="chatframe-button-highlightalert"/>
        <Layers>
            <Layer level="OVERLAY">        
                <FontString parentKey="Text" inherits="ChatFontNormal" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                self:RegisterForClicks(WoWTools_DataMixin.LeftButtonDown, WoWTools_DataMixin.RightButtonDown)
                WoWTools_ColorMixin:Setup(self:GetNormalTexture(), {type='Texture'})
                WoWTools_ColorMixin:Setup(self:GetPushedTexture(), {type='Texture'})
                WoWTools_ColorMixin:Setup(self.Text, {type='FontString'})
            </OnLoad>
            <OnLeave function="WoWToolsButton_OnLeave"/>
            <OnEnter function="WoWToolsButton_OnEnter"/>
        </Scripts>
    </Button>
</Ui>