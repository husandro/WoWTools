<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">

<Button name="WoWToolsPlayerFrameTemplate" virtual="true">
    <Size x="0" y="86"/>
    <Anchors>
        <Anchor point="LEFT"/>
        <Anchor point="RIGHT"/>
    </Anchors>
    <Scripts>
        <OnLeave>
            self.Select:Hide()
        </OnLeave>
        <OnEnter>
            self.Select:Show()
        </OnEnter>

        <OnHide>
            self.data= nil

            self.Name:SetText('')
            self.BattleTag:SetText('')
            self.AffixText:SetText('')
            self.ItemLevelText:SetText('')
            self.ItemName:SetText('')
            self.RaidText:SetText('')
            self.DungeonText:SetText('')
            self.WorldText:SetText('')
            self.PvPText:SetText('')

            self.ScoreText:SetText('')
            self.WeekNumText:SetText('')
            self.WeekLevelText:SetText('')

            self.Icon:SetTexture(0)
            self.Class:SetTexture(0)
            self.Spec:SetTexture(0)
            self.Background:SetTexture(0)
        </OnHide>
    </Scripts>

    <Layers>
        
        <Layer level="BACKGROUND" textureSubLevel="1">
            <Texture parentKey="Background" atlas="QuestItemBorder">
                <TexCoords left="1" right="0" top="0" bottom="1" />
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT" x="0" y="-6"/>
                </Anchors>
            </Texture>
        </Layer>
         <Layer level="BACKGROUND" textureSubLevel="2">
            <Texture parentKey="Class" alpha="0.5">
                <Size x="78" y="78"/>
                 <Anchors>
                    <Anchor point="TOP" x="0" y="0"/>
                </Anchors>
            </Texture> 
        </Layer>

        <Layer level="BACKGROUND" textureSubLevel="6">
            <Texture parentKey="SelectBg" atlas="glues-characterSelect-card-glow-swap" hidden='true'>
                <Anchors>
                    <Anchor point="TOPLEFT" x="-6" y="6"/>
                    <Anchor point="BOTTOMRIGHT" x="6" y="0"/>
                </Anchors>
            </Texture>
        </Layer>

        <Layer level="BACKGROUND" textureSubLevel="7">
            <Texture parentKey="Select" atlas="GarrMission_FollowerListButton-Select" hidden='true' setAllPoints="true"/>
        </Layer>
        
        











        <Layer level="BORDER">
            <Texture parentKey="Icon">
                <Size x="36" y="36"/>
                <Anchors>
                    <Anchor point="TOPRIGHT"/>
                </Anchors>
            </Texture>
            <FontString parentKey="PlayerLevelText" inherits="ChatFontNormal" justifyH="RIGHT">
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
                <Color r="0" g="1" b="0"/>
            </FontString>












            
            <Texture parentKey="Score" atlas="recipetoast-icon-star">
                <Size x="12" y="12"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.Icon" relativePoint="TOPLEFT"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '史诗钥石评分' or DUNGEON_SCORE)
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>            
            <FontString parentKey="ScoreText" inherits="ChatFontNormal" justifyH="RIGHT">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Score" relativePoint="LEFT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>

            <Texture parentKey="WeekNum" atlas="TaskPOI-IconSelect">
                <Size x="12" y="12"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.Score" relativePoint="BOTTOMRIGHT"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '本周完成次数' or format(CLUB_FINDER_LOOKING_FOR_CLASS_SPEC, CHALLENGE_MODE_THIS_WEEK, COMPLETE))
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>            
            <FontString parentKey="WeekNumText" inherits="ChatFontNormal" justifyH="RIGHT">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.WeekNum" relativePoint="LEFT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>


            <Texture parentKey="WeekLevel" atlas="characterupdate_clock-icon">
                <Size x="12" y="12"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.WeekNum" relativePoint="BOTTOMRIGHT"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '本周最高等级' or format(CURRENCY_THIS_WEEK, BEST))
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>
            <FontString parentKey="WeekLevelText" inherits="ChatFontNormal" justifyH="RIGHT">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.WeekLevel" relativePoint="LEFT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>















            <Texture parentKey="Spec" enableMouse="true">
                <Size x="14" y="14"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.Icon" relativePoint="BOTTOMRIGHT"/>
                </Anchors>
                 <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        local parent= self:GetParent()
                        if parent.data then
                            WoWTools_SetTooltipMixin:Frame(parent, nil, {specID=parent.data.specID, owner=self, anchor='ANCHOR_RIGHT'})
                        end
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>

            <FontString parentKey="ItemLevelText" inherits="ChatFontNormal">
                <Anchors>
                   <Anchor point="RIGHT" relativeKey="$parent.Spec" relativePoint="LEFT"/>
                </Anchors>
                 <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '装等' or STAT_AVERAGE_ITEM_LEVEL)
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </FontString>



            



            <Texture parentKey="Guild" enableMouse="true" atlas="communities-guildbanner-background">
                <Size x="14" y="14"/>
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.ItemLevelText" relativePoint="LEFT" x="-2" y="0"/>
                </Anchors>
                 <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '公会' or GUILD)
                        GameTooltip:Show()
                        self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>            
            <FontString parentKey="GuildText" inherits="ChatFontNormal" enableMouse="true">
                <Anchors>
                   <Anchor point="RIGHT" relativeKey="$parent.Guild" relativePoint="LEFT"/>
                </Anchors>
                 <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                </Scripts>
            </FontString>




            <FontString parentKey="Name" inherits="ChatFontNormal" justifyH="RIGHT" enableMouse="true">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.Spec"  relativePoint="BOTTOMRIGHT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
                 <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        local data= self:GetParent().data
                        GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '名称' or NAME)
                        local guid= data and data.guid
                        if guid then
                            local name, realmName = select(6, GetPlayerInfoByGUID(guid))
                            realmName= realmName~='' and realmName or WoWTools_DataMixin.Player.Realm
                            realmName= (WoWTools_DataMixin.Player.Realms[realmName] and '|cnGREEN_FONT_COLOR:' or '|cnWARNING_FONT_COLOR:')..realmName
                            GameTooltip:AddLine(name)
                            GameTooltip:AddLine(realmName)
                        end
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </FontString>
 
            <Texture parentKey="NameBackground" atlas="ChallengeMode-guild-background" alpha="0.5">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Name"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Name"/>
                </Anchors>
            </Texture>
        
            <Texture parentKey="Battle" atlas="gmchat-icon-blizz">
                <Size x="14" y="14"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.Name" relativePoint="BOTTOMRIGHT"/>
                </Anchors>
            </Texture>
            <FontString parentKey="BattleTag" inherits="ChatFontNormal" justifyH="RIGHT" enableMouse="true">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Battle" relativePoint="LEFT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
                <Color r="0" g="0.8" b="1"/>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, 
                            '|A:tokens-guildRealmTransfer-small:0:0|a'
                            ..(WoWTools_DataMixin.onlyChinese and '不同战网' or format(CLUB_FINDER_LOOKING_FOR_CLASS_SPEC, OTHER, COMMUNITY_COMMAND_BATTLENET))
                        )
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </FontString>








            







            <Texture parentKey="Raid" atlas="worldquest-icon-raid" enableMouse="true">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="4" y="0"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '团队副本' or RAIDS)
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>
            <FontString parentKey="RaidText" inherits="ChatFontNormal">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Raid" relativePoint="RIGHT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>

            <Texture parentKey="Dungeon" atlas="questlog-questtypeicon-group" enableMouse="true">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Raid" relativePoint="BOTTOMLEFT"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '地下城' or DUNGEONS)
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>
            <FontString parentKey="DungeonText" inherits="ChatFontNormal">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Dungeon" relativePoint="RIGHT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>

            <Texture parentKey="World" atlas="delves-bountiful" enableMouse="true">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Dungeon" relativePoint="BOTTOMLEFT"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '世界' or WORLD)
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>
            <FontString parentKey="WorldText" inherits="ChatFontNormal">
                  <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.World" relativePoint="RIGHT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>

            <Texture parentKey="PvP" atlas="CrossedFlags" enableMouse="true">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.World" relativePoint="BOTTOMLEFT"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, 'PvP')
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>
            <FontString parentKey="PvPText" inherits="ChatFontNormal">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.PvP" relativePoint="RIGHT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
            </FontString>

            <Texture parentKey="Item" atlas="poi-islands-table" enableMouse="true">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.PvP" relativePoint="BOTTOMLEFT"/>
                </Anchors>
                <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                        GameTooltip_SetTitle(GameTooltip, WoWTools_DataMixin.onlyChinese and '钥石' or CHALLENGE_MODE_KEYSTONE_NAME:format(''))
                        GameTooltip:Show()
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </Texture>            

            <FontString parentKey="ItemName" inherits="ChatFontNormal" justifyH="LEFT" enableMouse="true" wordwrap="false" >
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Item" relativePoint="RIGHT"/>
                    <Anchor point="RIGHT" relativeKey="$parent.BattleTag" relativePoint="LEFT"/>
                </Anchors>
                <Shadow>
                    <Offset x="1" y="-1"/>
                    <Color r="0" g="0" b="0"/>
                </Shadow>
                 <Scripts>
                    <OnLeave>
                        GameTooltip:Hide()
                        --self:SetAlpha(1)
                    </OnLeave>
                    <OnEnter>
                        local parent= self:GetParent()
                        if parent.data then
                            WoWTools_SetTooltipMixin:Frame(parent, nil, {itemLink=parent.data.itemLink, owner=self})
                        end
                        --self:SetAlpha(0.3)
                    </OnEnter>
                </Scripts>
            </FontString>












            <FontString parentKey="AffixText" inherits="ChatFontNormal" justifyH="CENTER">
                <Size x="0" y="18"/>
                <Anchors>
                   <Anchor point="TOP" relativeKey="$parent" x="0" y="-4"/>
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
</Button>





</Ui>
