<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">

	<CheckButton name="WoWToolsCheckTemplate" virtual="true">
        <Size x="32" y="32"/>
		<NormalTexture atlas="UI-QuestTrackerButton-QuestItem-Frame">
            <Anchors>
                <Anchor point="TOPLEFT" x="4" y="-4"/>
                <Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
            </Anchors>
        </NormalTexture>
		<PushedTexture atlas="Forge-ColorSwatchHighlight"/>
		<HighlightTexture atlas="Forge-ColorSwatchSelection" alphaMode="ADD"/>
		<CheckedTexture atlas="common-icon-checkmark-yellow">
            <Anchors>
                <Anchor point="TOPLEFT" x="6" y="-6"/>
                <Anchor point="BOTTOMRIGHT" x="-6" y="6"/>
            </Anchors>
        </CheckedTexture>
		<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled">
            <Anchors>
                <Anchor point="TOPLEFT" x="4" y="-4"/>
                <Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
            </Anchors>
        </DisabledCheckedTexture>
        <Scripts>
            <OnLoad>
                WoWTools_TextureMixin:SetAlphaColor(self:GetNormalTexture(), true)
                WoWTools_DataMixin:Hook(self, 'SetChecked', function(frame, isChecked)
                    self:GetNormalTexture():SetAlpha(isChecked and 0 or 1)
                end)
            </OnLoad>
            <OnLeave>
                self:GetNormalTexture():SetAlpha(self:GetChecked() and 0 or 1)
                WoWToolsButton_OnLeave(self)
            </OnLeave>
            <OnEnter>
                self:GetNormalTexture():SetAlpha(1)
                WoWToolsButton_OnEnter(self)
            </OnEnter>
            <OnMouseUp>
                if self.settings then
                    self:settings()
                end
            </OnMouseUp>
        </Scripts>
	</CheckButton>

</Ui>