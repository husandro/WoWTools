<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">

    <Button name="JourneyCardButtonTemplate"  inherits="AlphaHighlightButtonTemplate" mixin="JourneyCardButtonMixin" virtual="true">
		<Size x="374" y="164"/>
		<Frames>
			<Frame parentKey="LockFrame">
				<Size x="40" y="40"/>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-15" y="-10"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="LockIcon" atlas="ui-journeys-greatvault-lock" useAtlasSize="true" hidden="true">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<StatusBar parentKey="JourneyCardProgressBar">
				<Size x="335" y="18"/>
				<BarTexture atlas="ui-journeys-renown-progressbar-fill"/>
				<Anchors>
					<Anchor point="BOTTOM" y="25"/>
					<Anchor point="CENTER"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="JourneyCardProgressBarBG" atlas="ui-journeys-renown-progressbar-BG" useAtlasSize="true">
							<Anchors>
								<Anchor point="BOTTOM"/>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</StatusBar>
		</Frames>
		<NormalTexture parentKey="NormalTexture" atlas="ui-journeys-delve-button" useAtlasSize="true"/>
		<PushedTexture parentKey="PushedTexture" atlas="ui-journeys-delve-button-pressed" useAtlasSize="true"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="JourneyCardName" inherits="GameFontHighlightMed2" justifyH="LEFT" justifyV="TOP">
					<Size x="290" y="20"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="25" y="-25"/>
					</Anchors>
				</FontString>
				<FontString parentKey="JourneyCardLevel" inherits="GameFontNormalSmall2" justifyH="LEFT" justifyV="TOP">
					<Size x="150" y="10"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.JourneyCardName" x="0"/>
						<Anchor point="BOTTOM" relativeKey="$parent.JourneyCardProgressBar" relativePoint="TOP" y="5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>


</Ui>