<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\Blizzard_SharedXML\UI.xsd">

	<FontFamily name="WoWToolsFonts" virtual="true">
        <Member alphabet="roman">
			<Font font="Fonts\ARIALN.TTF" height="12" outline="THICK"/>
		</Member>
		<Member alphabet="korean">
			<Font font="Fonts\2002.TTF" height="12" outline="THICK"/>
		</Member>
		<Member alphabet="simplifiedchinese">
			<Font font="Fonts\ARHei.ttf" height="12" outline="THICK"/>
		</Member>
		<Member alphabet="traditionalchinese">
			<Font font="Fonts\arheiuhk_bd.TTF" height="12" outline="THICK"/>
		</Member>
		<Member alphabet="russian">
			<Font font="Fonts\ARIALN.TTF" height="12" outline="THICK"/>
		</Member>
	</FontFamily>

    <Font name="WoWToolsFont" inherits="WoWToolsFonts" justifyH="LEFT" virtual="true">
        <Color r="1.0" g="0.82" b="0.0"/>
        <Shadow>
            <Offset>
                <AbsDimension x="1" y="-1"/>
            </Offset>
            <Color r="0" g="0" b="0"/>
        </Shadow> 
    </Font>

    <Font name="WoWToolsFont2" inherits="WoWToolsFonts" justifyH="LEFT" virtual="true">
        <Color r="1.0" g="1.0" b="1.0"/>
        <Shadow>
            <Offset>
                <AbsDimension x="1" y="-1"/>
            </Offset>
            <Color r="0" g="0" b="0"/>
        </Shadow>        
    </Font>
</Ui>